def fun():
    a=int(input("enter the no"))
    b=int(input("enter the no"))
    c=int(input("enter the no."))
    if a>b and a>c:
        print("a is greater",a)
    elif b>a and b>c:
        print("b is greater",b)
    else:
        print("c is greater",c) 
fun()    



def fun(a,b,c):
    if a>b and a>c:
      print("a is greater",a)
    elif b>a and b>c:
        print("b is greater",b)
    else:
        print("c is greater",c) 
fun(5,7,13)        

